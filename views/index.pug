extends layout

block content
  nav#top-bar.navbar.navbar-light.bg-light
    a.navbar-brand(href="#")
      svg.bi(width='32' height='32' fill='currentColor')
        use(xlink:href='./images/bootstrap-icons.svg#rss') RSS
    div.d-flex.flex-row-reverse.bd-highlight
      button.btn.btn-success.ml-1(type='button') Save
      button.btn.btn-secondary.ml-1(type='button') Preview
      button.btn.btn-danger(type='button') Send
  div.container
    div.row
      div.col
        form
          div.form-group
            label(for='mail-content') Email address
            input#mail-content.form-control(type='email' aria-describedby='emailHelp' placeholder='Enter email')
            small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
          div.form-group
            textarea#exampleInputEmail123.form-control
      div.col
        label(for='rss-url') RSS url
        div.input-group.mb-3
          input#rss-url.form-control(type='text' aria-label="Recipient's username" aria-describedby='button-addon2')
          div.input-group-append
            button#button-addon2.btn.btn-outline-secondary(type='button') Add
        nav(aria-label='breadcrumb')
          ol.breadcrumb
            li.breadcrumb-item.active(aria-current='page') RSS
